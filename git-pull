cd `dirname $0`

git pull origin master
git checkout master

git submodule update --init --reference .

git pull --recurse-submodules && git submodule update --recursive --remote

#plated/upgrade

echo " fixing local releases branch to track origin "
cd exe
git stash -u
git reset --hard origin/releases
git branch -f --track releases origin/releases
git checkout releases
cd ..

echo " fixing local docs branch to track origin "
cd docs
git stash -u
git reset --hard origin/gh-pages
git branch -f --track gh-pages origin/gh-pages
git checkout gh-pages
cd ..
